---
// src/pages/booklets/index.astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import { FileText } from 'lucide-react';

const pageTitle = "Booklet Perjalanan Pulau Tidung";

const booklets = [
  {
    title: "GEMARIKAN",
    description: "GEMARIKAN - Gemar Makan Ikan untuk meningkatkan kesadaran tentang bahaya stunting",
    pages: "8 halaman",
    format: "PDF",
    size: "13.8 MB",
    url: "/booklets/Booklet GEMARIKAN-Riski.pdf",
    poster: "/images/booklets/Booklet GEMARIKAN-Riski.png",
    author: "M. Riski Ramadhana", // Tambahkan author
    authorRole: "Teknologi Hasil Perikanan" // Tambahkan peran author
  },
  {
      title: "Laskar Laut",
      description: "Laskar Laut - Latihan Anak Sekolah Kuasai Laut untuk tujuan penerapan zero waste pada ikan",
      pages: "8 halaman",
      format: "PDF",
      size: "8.4 MB",
    url: "/booklets/Booklet Laskar Laut-Riski.pdf",
    poster: "/images/booklets/Booklet Laskar Laut-Riski.png",
    author: "M. Riski Ramadhana", // Tambahkan author
    authorRole: "Teknologi Hasil Perikanan" // Tambahkan peran author
  },
  {
    title: "Perencana Aktivitas",
    description: "Rencanakan aktivitas harian dan petualangan olahraga air Anda",
    pages: "12 halaman",
    format: "PDF",
    size: "2.8 MB",
    url: "/booklets/activity-planner.pdf",
    poster: "/images/booklets/activity-planner-poster.jpg",
    author: "Budi Santoso", // Tambahkan author
    authorRole: "Tim Pariwisata" // Tambahkan peran author
  },
  {
    title: "Panduan Kuliner Lokal",
    description: "Temukan pengalaman kuliner terbaik di Pulau Tidung",
    pages: "20 halaman",
    format: "PDF",
    size: "4.5 MB",
    url: "/booklets/food-guide.pdf",
    poster: "/images/booklets/food-guide-poster.jpg",
    author: "Dewi Anggraini", // Tambahkan author
    authorRole: "Tim Kuliner" // Tambahkan peran author
  },
  {
    title: "Peta Interaktif",
    description: "Peta lengkap dengan lokasi penting dan rute perjalanan",
    pages: "8 halaman",
    format: "PDF",
    size: "3.7 MB",
    url: "/booklets/interactive-map.pdf",
    poster: "/images/booklets/map-poster.jpg",
    author: "Rudi Hermawan", // Tambahkan author
    authorRole: "Tim Navigasi" // Tambahkan peran author
  },
  {
    title: "Wisata Keluarga",
    description: "Aktivitas terbaik untuk keluarga dengan anak-anak",
    pages: "18 halaman",
    format: "PDF",
    size: "4.2 MB",
    url: "/booklets/family-travel.pdf",
    poster: "/images/booklets/family-travel-poster.jpg",
    author: "Siti Marlina", // Tambahkan author
    authorRole: "Tim Keluarga" // Tambahkan peran author
  }
];
---

<BaseLayout {pageTitle}>
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-blue-900 mb-6">Booklet Perjalanan</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Panduan komprehensif untuk petualangan Anda di Pulau Tidung
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {booklets.map((booklet) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            {/* Poster PDF sebagai halaman pertama */}
            <div class="relative md:h-100 overflow-hidden group pointer">
              <img 
                src={booklet.poster} 
                alt={`Cover ${booklet.title}`}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent flex items-end p-4">
                <div class="w-full flex justify-center items-center">
                  <h3 
                    class="text-5xl font-[karimun] text-center text-white"
                  >
                    {booklet.title}
                  </h3>
                </div>
              </div>
              
              {/* Overlay ikon PDF */}
              <div class="absolute top-4 right-4 bg-white/80 backdrop-blur-sm rounded-full p-2">
                <FileText className="h-6 w-6 text-blue-600" />
              </div>
            </div>
            
            <div class="p-6">
              {/* Tambahkan informasi author di sini */}
              <div class="flex items-center mb-3 justify-center">
                <div class="flex flex-col">
                  <span class="text-sm font-medium text-gray-800">{booklet.author}</span>
                  <span class="text-xs text-gray-500">{booklet.authorRole}</span>
                </div>
              </div>
              
              <p class="text-gray-600 mb-4 text-center">{booklet.description}</p>
              
              <div class="space-y-2 text-sm text-gray-600 mb-6">
                <div class="flex justify-between">
                  <span>Halaman:</span>
                  <span>{booklet.pages}</span>
                </div>
                <div class="flex justify-between">
                  <span>Format:</span>
                  <span>{booklet.format}</span>
                </div>
                <div class="flex justify-between">
                  <span>Ukuran:</span>
                  <span>{booklet.size}</span>
                </div>
              </div>
              
              <div class="flex gap-3">
                <a 
                  href={booklet.url} 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition-colors"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                  Baca
                </a>
                <a 
                  href={booklet.url} 
                  download
                  class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                  Download
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>