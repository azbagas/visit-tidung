---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const culinaryItems = await getCollection('culinary');
  return culinaryItems.map((item) => ({
    params: { slug: item.slug },
    props: { culinary: item },
  }));
}

const { culinary } = Astro.props;
const { Content } = await culinary.render();
---

<BaseLayout title={culinary.data.title}>
  <section class="bg-background px-3 py-16">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8 text-center">
        <h1 class="text-4xl font-bold text-blue-900 mb-4">{culinary.data.title}</h1>
        <div class="flex justify-center items-center mb-6">
          {[...Array(5)].map((_, i) => (
            <svg 
              key={i} 
              xmlns="http://www.w3.org/2000/svg" 
              class={`h-5 w-5 ${i < Math.floor(culinary.data.rating) ? 'text-yellow-400' : 'text-gray-300'}`} 
              viewBox="0 0 20 20" 
              fill="currentColor"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
          <span class="ml-2 text-gray-600">{culinary.data.rating}/5</span>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-12">
        <Image 
          src={culinary.data.featuredImage} 
          alt={culinary.data.title}
          class="w-full h-96 object-cover"
        />
      </div>

      <article class="prose max-w-none mx-auto">
        <Content />
      </article>
    </div>
  </section>
</BaseLayout>