---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CulinaryCard from '@/components/custom/CulinaryCard';
import { culinaryItems } from '@/data/culinaryItems';

const pageTitle = "Kuliner Khas Pulau Tidung";
---

<BaseLayout {pageTitle}>
  <section class="bg-background px-3 py-2 md:px-3 md:py-2" id="culinary-section">
    <div class="max-w-6xl mx-auto py-8">
      <div class="text-center mb-4">
        <span class="inline-block px-4 py-2 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium mb-6">
          Local Delicacies
        </span>
      </div>
      
      <h1 class="text-4xl md:text-5xl font-bold text-blue-900 text-center mb-4">
        Local Culinary Delights
      </h1>
      
      <p class="text-center text-blue-600 max-w-3xl mx-auto mb-16 text-lg">
        Taste the authentic flavors of Tidung Islandâ€™s fresh seafood and traditional dishes
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {culinaryItems.map((item, index) => (
          <CulinaryCard 
            title={item.title}
            description={item.description}
            image={item.image}
          />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>