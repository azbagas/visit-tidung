---
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
} from '@/components/ui/card';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import { generateExcerpt, formatDate } from '@/utils';
import PageHeading from '@/components/custom/PageHeading';
import PageSubHeading from '@/components/custom/PageSubHeading';

// const articles = await getCollection('articles');
const pageTitle = 'Artikel Pulau Tidung';

// Urutkan artikel berdasarkan tanggal terbaru
const articles = await getCollection('articles');
articles.sort((a, b) => {
  return b.data.publishedDate.getTime() - a.data.publishedDate.getTime();
});
---

<BaseLayout {pageTitle}>
  <section class="py-16 bg-gradient-to-br from-cyan-50 to-blue-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <PageHeading>Artikel Pulau Tidung</PageHeading>
        <PageSubHeading>
          Temukan panduan perjalanan, tips, dan cerita inspiratif tentang Pulau
          Tidung
        </PageSubHeading>
      </div>

      <div class="grid gap-6 mt-4 max-w-4xl mx-auto">
        {
          articles.map((article) => (
            <a href={`/articles/${article.id}`} class="group">
              <Card className=" px-0">
                <CardHeader className="flex flex-col sm:flex-row gap-4 px-4 items-stretch">
                  <div class="sm:max-w-64">
                    <Image
                      src={article.data.featuredImage}
                      alt={article.data.title}
                      class="rounded-lg h-full object-cover"
                    />
                  </div>
                  <div>
                    <CardTitle className="text-lg leading-6 mb-2">
                      {article.data.title}
                    </CardTitle>
                    <CardDescription>
                      {generateExcerpt(article.body || article.data.title)}
                    </CardDescription>
                    <div class="flex items-center justify-between text-sm text-gray-500 mt-3">
                      <div>
                        <span>Oleh {article.data.author}</span>
                        <span class="mx-2">•</span>
                        <span>{formatDate(article.data.publishedDate)}</span>
                      </div>
                    </div>
                    <div class="flex justify-end mt-3">
                    <div class="text-blue-50 font-medium text-sm px-4 py-2 rounded-full transition-colors duration-200 shadow-sm bg-gradient-to-r from-cyan-500 to-blue-500 hover:from-cyan-600 hover:to-blue-600 hover:shadow-md">
                      Baca selengkapnya →
                    </div>

                    </div>
                  </div>
                </CardHeader>
              </Card>
            </a>
          ))
        }
      </div>

