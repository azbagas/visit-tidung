---
const { label, labelColor, icon, title, description, info, infoIcon } = Astro.props;
---

<div class="rounded-2xl overflow-hidden border border-border bg-card hover:shadow-xl transition">
  <div class="relative h-52 bg-muted flex items-center justify-center text-muted-foreground">

    <!-- Placeholder gambar -->
    <span class="text-xs">Gambar</span>
    <span class={`absolute top-4 left-4 text-xs font-semibold text-white py-1 px-3 rounded-full ${labelColor}`}>
      {label}
    </span>
  </div>
  
  <div class="p-5 space-y-2">
    <h3 class="text-lg font-semibold flex items-center gap-2">{icon}{title}</h3>
    <p class="text-muted-foreground text-sm">{description}</p>
    <p class="text-sm flex items-center gap-1 text-primary mt-2">
      {infoIcon}
      {info}
    </p>
  </div>
</div>
